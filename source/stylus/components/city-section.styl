.city-section
  background-image: url('../images/city-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #eeecfa
  position relative
  overflow: hidden

  &__container
    position relative
    z-index 1
    padding 35px 0 20px 0
    +above($breakpoints.sm)
      padding 70px 0 70px 0
    +above($breakpoints.md)
      padding 90px 0 90px 0
    +above($breakpoints.xxl)
      padding 138px 0 140px 0

  &__arc
    position: absolute
    z-index -1
    border-top: 15px solid rgba(255, 255, 255, 0.76);
    border-left: 15px solid rgba(255, 255, 255, 0.76);
    border-right: 15px solid rgba(255, 255, 255, 0.76);
    border-bottom: 0px;
    border-radius: 390px 390px 0 0;
    width: 226px;
    height: 284px;
    bottom: 0px;
    right: 43px;
    +above($breakpoints.sm)
      border-top: 23px solid rgba(255, 255, 255, 0.76);
      border-left: 23px solid rgba(255, 255, 255, 0.76);
      border-right: 23px solid rgba(255, 255, 255, 0.76);
      border-bottom: 0px;
      border-radius: 390px 390px 0 0;
      width: 350px;
      height: 480px;
      bottom: 0px;
      right: -43px;
    +above($breakpoints.md)
      border-top: 30px solid rgba(255, 255, 255, 0.76);
      border-left: 30px solid rgba(255, 255, 255, 0.76);
      border-right: 30px solid rgba(255, 255, 255, 0.76);
      border-bottom: 0px;
      border-radius: 390px 390px 0 0;
      width: 460px;
      height: 608px;
      bottom: 0px;
      right: -52px;
    +above($breakpoints.xxl)
      border-top: 38px solid rgba(255, 255, 255, 0.76)
      border-left: 38px solid rgba(255, 255, 255, 0.76)
      border-right: 38px solid rgba(255, 255, 255, 0.76)
      border-bottom: 0px
      border-radius: 390px 390px 0 0
      width: 659px;
      height: 842px;
      bottom: -1px;
      right: -130px;

  &__title
    +above($breakpoints.md)
      line-height 120% !important

  &__title,
  &__sub-title
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__sub-title
    padding 20px 0 10px 0
    +above($breakpoints.sm)
      padding 30px 0 35px 0
    +above($breakpoints.md)
      padding 35px 0 40px 0
    +above($breakpoints.xxl)
      padding 40px 0 48px 0

  &__mark-bg-1,
  &__mark-bg-3
    background-color $color-sea
    border-radius: 30px
    color: #fff

  &__mark-bg-1
    padding 0 5px 0 5px
    +above($breakpoints.sm)
      padding 0 8px 0 8px
    +above($breakpoints.md)
      padding 0 10px 0 8px
    +above($breakpoints.xxl)
      padding: 0 15px 0 10px;

  &__mark-bg-2
    position relative
    z-index 1
    color: #fff
    &:after
      content: ""
      position: absolute
      z-index -1
      background-color $color-sea
      border-radius: 30px
      width: 83px;
      height: 18px;
      top: 3px;
      left: -6px;
      +above($breakpoints.sm)
        width: 130px;
        height: 29px;
        top: 5px;
        left: -9px;
      +above($breakpoints.md)
        width: 174px;
        height: 40px;
        top: 5px;
        left: -11px;
      +above($breakpoints.xxl)
        width: 212px;
        height: 50px;
        top: 5px;
        left: -9px;

  &__mark-bg-3
    padding 0 5px 0 5px
    +above($breakpoints.sm)
      padding 0 8px 0 8px
    +above($breakpoints.md)
      padding 0 15px 0 10px
    +above($breakpoints.xxl)
      padding: 0 18px 0 10px;

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    background-color #fff
    border-radius: 0 390px 390px 0
    padding 15px 43px 15px 15px
    +above($breakpoints.sm)
      padding 28px 50px 28px 25px
      width 380px
    +above($breakpoints.md)
      gap: 7px
      padding 38px 70px 38px 35px
      width 480px
    +above($breakpoints.xxl)
      width 515px
      padding 48px 90px 48px 45px
      gap: 9px

  &__img
    width 300px
    height: auto
    margin: 0 auto
    +above($breakpoints.sm)
      margin: 0;
      position: absolute;
      z-index -1
      width: 630px;
      bottom: -82px;
      right: -188px;
    +above($breakpoints.md)
      width: 824px;
      bottom: -115px;
      right: -238px;
    +above($breakpoints.xxl)
      width: 1169px;
      bottom: -168px;
      right: -385px;
