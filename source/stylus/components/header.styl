.header
  &__container
    display: flex
    flex-direction: row
    justify-content space-between

  &__block
    display: flex
    gap: 10px
    +above($breakpoints.sm)
      gap: 20px
    +above($breakpoints.xxl)
      gap: 34px

  &__logo-wrapper
    background-color #fff
    border-radius: 0 0 80px 80px;
    padding: 10px 10px 25px;
    +above($breakpoints.sm)
      padding 30px 15px 40px
    +above($breakpoints.md)
      padding 40px 20px 50px
      border-radius: 0 0 100px 100px;
    +above($breakpoints.xxl)
      border-radius: 0 0 160px 160px;
      padding 50px 23px 60px

  &__logo
    width 80px
    height: auto
    +above($breakpoints.sm)
      width 140px
    +above($breakpoints.md)
      width 160px
    +above($breakpoints.xxl)
      width 173px

  &__brand-title
    display: none
    +above($breakpoints.sm)
      display: block
      padding-top 30px
    +above($breakpoints.md)
      padding-top 40px
    +above($breakpoints.xxl)
      padding-top 60px

  &__connection
    display: flex
    align-items: center
    justify-content center
    gap: 5px
    color: #fff
    border: 3px solid #fff
    border-radius: 50px
    width 150px
    height: 30px
    margin-top 15px
    +above($breakpoints.sm)
      gap: 8px
      margin-top 30px
      width 240px
      height: 45px
    +above($breakpoints.md)
      margin-top 40px
      gap: 12px
      border: 4px solid #fff
      width 250px
      height: 50px
    +above($breakpoints.xxl)
      gap: 16px
      margin-top 63px
      border: 5px solid #fff
      width 280px
      height: 56px

  &__connection-icon
    width 10px
    height: 10px
    +above($breakpoints.sm)
      width 13px
      height: 13px
    +above($breakpoints.md)
      width 16px
      height: 16px
    +above($breakpoints.xxl)
      width 19px
      height: 19px
