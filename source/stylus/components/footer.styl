.footer
  // background-image: url('../images/footer-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #fff
  position relative
  z-index 1

  &__container
    color: $color-sea
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    padding 15px 0 15px
    +above($breakpoints.sm)
      justify-content space-between
      flex-direction: row
      padding 20px 0 20px
    +above($breakpoints.md)
      padding 25px 0 20px
    +above($breakpoints.xxl)
      padding 33px 0 27px

  &__brand
    display: flex
    align-items: center
    gap: 20px
    +above($breakpoints.md)
      gap: 50px
    +above($breakpoints.xxl)
      gap: 70px

  &__logo
    width 90px
    height: auto
    +above($breakpoints.sm)
      width 110px
    +above($breakpoints.md)
      width 120px
    +above($breakpoints.xxl)
      width 136px

  &__block
    display: none
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      gap: 6px

  &__privacy
    cursor pointer
    text-decoration: underline
  &__privacy-mobile
    cursor pointer
    text-decoration: underline
    +above($breakpoints.sm)
      display: none

  &__connection
    display: flex
    align-items: center
    justify-content center
    gap: 5px
    color: #1FA099
    border: 3px solid #1FA099
    border-radius: 50px
    width 150px
    height: 30px
    +above($breakpoints.sm)
      gap: 8px
      width 240px
      height: 45px
    +above($breakpoints.md)
      gap: 12px
      border: 4px solid #1FA099
      width 250px
      height: 50px
    +above($breakpoints.xxl)
      gap: 16px
      border: 5px solid #1FA099
      width 280px
      height: 56px

  &__connection-icon
    width 10px
    height: 10px
    +above($breakpoints.sm)
      width 13px
      height: 13px
    +above($breakpoints.md)
      width 16px
      height: 16px
    +above($breakpoints.xxl)
      width 19px
      height: 19px
