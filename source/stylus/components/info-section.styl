.info-section
  background-image: url('../images/info-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #eeecfa

  &__container
    position relative
    text-align: center
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      text-align: start
      padding 50px 0 60px 0
    +above($breakpoints.md)
      padding 80px 0 90px 0
    +above($breakpoints.xxl)
      padding 92px 0 112px 0

  &__img-1
    position: absolute
    width: 135px;
    height: auto;
    top: 18px;
    right: -104px;
    +above($breakpoints.sm)
      width: 280px;
      top: -5px;
      right: -266px;
    +above($breakpoints.md)
      width: 360px;
      top: 5px;
      right: -383px;
    +above($breakpoints.xxl)
      width: 588px;
      top: -109px;
      right: -654px;

  &__img-2
    position: absolute
    width: 150px;
    height: auto;
    bottom: -58px;
    left: -110px;
    +above($breakpoints.sm)
      width: 380px;
      bottom: -141px;
      left: -309px;
    +above($breakpoints.md)
      width: 650px;
      bottom: -243px;
      left: -494px;
    +above($breakpoints.xxl)
      width: 1029px;
      bottom: -386px;
      left: -810px;

  &__sub-title
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 25px 0 25px 0
    +above($breakpoints.md)
      padding 30px 0 30px 0
    +above($breakpoints.xxl)
      padding 31px 0 33px 0

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 20px

  &__card-wrapper
    width 280px !important
    border-radius: 0 390px 390px 0
    background-color rgba(255, 255, 255, 0.4)
    padding 10px
    height: 80px
    +above($breakpoints.sm)
      width 235px !important
      padding 15px
      height: 120px
    +above($breakpoints.md)
      width 308px !important
      padding 20px
      height: 160px
    +above($breakpoints.xxl)
      width 380px !important
      height: 188px
      padding 24px

  &__card
    background-color #fff
    border-radius: 0 390px 390px 0
    padding 15px 10px 10px 15px
    height: 100%
    +above($breakpoints.sm)
      padding 15px 10px 10px 20px
    +above($breakpoints.md)
      padding 20px 10px 10px 25px
    +above($breakpoints.xxl)
      padding 22px 10px 10px 30px

  &__form
    background-color $color-sea
    border-radius: 50px
    padding 15px 10px
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      border-radius: 390px
      flex-direction: row
      justify-content center
      gap: 7px
      margin-top 40px
      padding 25px 10px 25px 10px
    +above($breakpoints.md)
      gap: 10px
      margin-top 50px
      padding 30px 10px 30px 10px
    +above($breakpoints.xxl)
      margin-top 71px
      padding 33px 10px 37px 10px
    & > *
      width 250px !important
      +above($breakpoints.sm)
        width 220px !important
      +above($breakpoints.md)
        width 280px !important
      +above($breakpoints.xxl)
        width 350px !important
