@font-face
  font-family 'Lato-Black'
  src url('../fonts/Lato-Black.woff'), url('../fonts/Lato-Black.woff2')
  font-display swap
@font-face
  font-family 'Lato-Bold'
  src url('../fonts/Lato-Bold.woff'), url('../fonts/Lato-Bold.woff2')
  font-display swap
@font-face
  font-family 'Lato-Medium'
  src url('../fonts/Lato-Medium.woff'), url('../fonts/Lato-Medium.woff2')
  font-display swap
@font-face
  font-family 'Lato-Regular'
  src url('../fonts/Lato-Regular.woff'), url('../fonts/Lato-Regular.woff2')
  font-display swap

@font-face
  font-family 'Montserrat-Bold'
  src url('../fonts/Montserrat-Bold.woff'), url('../fonts/Montserrat-Bold.woff2')
  font-display swap
@font-face
  font-family 'Montserrat-Regular'
  src url('../fonts/Montserrat-Regular.woff'), url('../fonts/Montserrat-Regular.woff2')
  font-display swap


@import 'common/variables'
@import 'common/*'
@import 'components/*'

body
  margin 0 auto
  font-size 18px
  font-family 'Lato-Regular'
  font-weight 400
  line-height 120%
  color #2B2B2B

.layout
  width 100%
  height 100%
  margin 0 auto
  display flex
  flex-direction column
  overflow-x hidden
.main
  flex 1

.wrapper
  max-width 320px
  margin 0 auto
  padding 0 6px
  width 100%
  +above($breakpoints.sm)
    max-width 750px
    padding 0 12px
  +above($breakpoints.md)
    max-width 996px
    padding 0 15px
  +above($breakpoints.xxl)
    padding 0 20px
    max-width 1220px
